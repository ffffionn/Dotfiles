# SYSTEM
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lss="screen -ls"
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias c='clear'
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v -i"
alias :q="exit"                     # vim habits die hard
alias mk="mkdir -p"
alias h="history"
alias get='sudo apt-get install'
alias shutdown='sudo /sbin/shutdown'

 # VM
alias web='cd ~/web/'
alias vre='vagrant provision --reload'
alias von='vagrant up; vagrant ssh'
alias voff='vagrant suspend'
alias art="php artisan"
alias voff='vagrant halt'


 # GIT
alias ga="git add"
alias gaa="git add -A"
alias gs="git status"
alias gb="git branch"
alias gl="git log"
